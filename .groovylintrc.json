{
        "extends": "recommended-jenkinsfile",
        "rules": {
                "formatting.Indentation": {
                        "spacesPerIndentLevel": 2
                },
                "formatting.LineLength": {
                        "length": 150
                },
                "design.Instanceof": "off",
                "dry.DuplicateNumberLiteral": {
                        "ignoreNumbers": "0,1"
                }
        }
}
